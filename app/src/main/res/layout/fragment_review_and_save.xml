<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context=".Fragments.ReviewAndSaveFragment"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_review_and_save"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="3"
            android:src="@drawable/image1"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_edit_btn_review_and_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_create_black_36px"
            app:layout_anchor="@id/background_review_and_save"
            app:layout_anchorGravity="bottom|end"/>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/details_review_and_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_review_and_save"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Event Name"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Type"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="City"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Date"
                android:textAppearance="?android:textAppearanceLarge"/>

        </LinearLayout>

        <Button
            android:id="@+id/save_create_event_btn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/details_review_and_save"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryDark"
            android:text="Save"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="25sp"/>

    </LinearLayout>
</LinearLayout>



