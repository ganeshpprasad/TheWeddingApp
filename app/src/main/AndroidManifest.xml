<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.ganesh.brokerapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Splash"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CreateOrJoinActivity"
            android:label="@string/title_activity_create_or_join"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity"/>
        </activity>
        <activity android:name=".SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable">
            </meta-data>
        </activity>
        <activity
            android:name=".ForumActivity"
            android:label="Event Details"
            android:parentActivityName=".CreateOrJoinActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".UserAccountActivity"
            android:label=""
            android:parentActivityName=".ForumActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ganesh.brokerapp.ForumActivity"/>
        </activity>
        <activity
            android:name=".SearchVendorsActivity"
            android:label="@string/title_activity_search_vendors"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ganesh.brokerapp.MainActivity"/>
        </activity>
        <activity
            android:name=".CategoryMainActivity"
            android:label="@string/title_activity_category_main"
            android:parentActivityName=".SearchVendorsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ganesh.brokerapp.SearchVendorsActivity"/>
        </activity>
        <activity
            android:name=".VendorAccountActivity"
            android:label="@string/title_activity_vendor_account"
            android:parentActivityName=".CategoryMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ganesh.brokerapp.CategoryMainActivity"/>
        </activity>
        <activity
            android:name=".EventDescriptionActivity"
            android:label="@string/title_activity_event_description"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ganesh.brokerapp.MainActivity"/>
        </activity>
    </application>

</manifest>